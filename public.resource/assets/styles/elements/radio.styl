.radio
  vertical-align 8%

  &__box
    position relative
    display inline-block
    width 1em
    height 1em
    overflow hidden
    border 1px solid
    border-radius 1em
    text-align center
    vertical-align middle
    background-color white

  &__check
    display block
    box-sizing border-box
    height 100%
    overflow hidden
    border 3px solid white
    border-radius 1em

  &__self
    position absolute
    top 0
    left 0
    z-index 1
    width 1em
    height 1em
    opacity 0
    cursor pointer

    &:checked + span
      background-color black
