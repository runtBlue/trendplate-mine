mixin switch

  //-
    - Usage: +switch(checked="true")
    - Yield: span.switch > input(type="checkbox" checked="true")

  - var classes = attributes.class
  - attributes.class = null

  span.switch(
    class=classes
  )
    input&attributes(attributes).switch__self(
      type="checkbox"
      autocomplete="off"
    )
    span.switch__box
      span.switch__check
