mixin row

  //- Usage: +row(width="90%")

  - var width = attributes.width
  - attributes.width = null

  if (width)
    if (attributes.style)
      - attributes.style += "; width:" + width + ";"
    else
      - attributes.style = "width:" + width + ";"

  div&attributes(attributes).row
    block



