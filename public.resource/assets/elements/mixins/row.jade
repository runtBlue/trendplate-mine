mixin row__gutter

  //-
    - Usage: +row__gutter(by="2")
    - Yield: div.row__gutter(style="width: 2em;")

  - var by = attributes.by
  - attributes.by = null

  if (by)
    if (attributes.style)
      - attributes.style += "; width:" + by + "em;"
    else
      - attributes.style = "width:" + by + "em;"

  div&attributes(attributes).row__gutter
